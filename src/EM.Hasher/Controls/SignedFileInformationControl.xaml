<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="EM.Hasher.Controls.SignedFileInformationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:EM.Hasher.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="43" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Certificate Icon  -->
        <FontIcon
            Grid.Column="0"
            Margin="3,0,0,0"
            HorizontalAlignment="Left"
            Glyph="&#xEB95;" />

        <!--  Details Grid with aligned rows  -->
        <Grid
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Row 0: Signer  -->
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Margin="0,0,20,3"
                Foreground="#8bb7f0"
                Text="Signer"
                TextWrapping="Wrap" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Margin="0,0,0,3"
                IsTextSelectionEnabled="True"
                Text="{x:Bind Signer, Mode=OneWay}"
                TextWrapping="Wrap" />

            <!--  Row 1: Size  -->
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,0,20,3"
                Foreground="#8bb7f0"
                Text="Issuer" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,0,0,3"
                Text="{x:Bind Issuer, Mode=OneWay}" />
        </Grid>
    </Grid>
</UserControl>
